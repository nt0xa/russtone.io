@import 'jeet'
@import 'nib'

// =========
// = Fonts =
// =========

@import url('//fonts.googleapis.com/css?family=Source+Sans+Pro:400,700')
@import url('//fonts.googleapis.com/css?family=Merriweather:400,700')
@import url('//fonts.googleapis.com/css?family=Fira+Mono:400,700')
@import url('//maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css')

// =================
// = Global mixins =
// =================

global-reset()

// =================
// = Base16 colors =
// =================

b16-black-0      = #2d2d2d
b16-black-1      = #393939
b16-dark-grey-0  = #515151
b16-dark-grey-1  = #747369
b16-light-grey-0 = #a09f93
b16-light-grey-1 = #d3d0c8
b16-white-0      = #e8e6df
b16-white-1      = #f2f0ec
b16-red          = #f2777a
b16-orange       = #f99157
b16-yellow       = #ffcc66
b16-green        = #99cc99
b16-cyan         = #66cccc
b16-blue         = #6699cc
b16-violet       = #cc99cc
b16-brown        = #d27b53

// ======================
// = Highlight js theme =
// ======================

@import('./base16-eighties.dark.css')

// =========
// = Sizes =
// =========

logo-font-size = 4rem
nav-font-size = 1rem

very-big-font-size = 2.5rem
big-font-size = 2rem
medium-font-size = 1.2rem
text-font-size = 1rem

site-width = 40rem

// ==========
// = Common =
// ==========

a
  text-decoration: none

// ==========
// = Header =
// ==========

.header
  .logo
    font: bold logo-font-size/100% 'Source Sans Pro', sans-serif
    margin-top: 1rem
    text-align: center
    &__link
      color: b16-dark-grey-0
      &__tail
        color: b16-blue

// ==============
// = Navigation =
// ==============

.nav
  &__list
    center(site-width)
    font: nav-font-size/100% 'Source Sans Pro', sans-serif
    margin-top: .5rem
    text-align: center
    &__item
      display: inline-block
      &__link
        color: b16-light-grey-0
        text-transform: uppercase
        &:hover
          color: b16-dark-grey-0
      &:after
        color: b16-light-grey-0
        content: "\2022"
        padding: 0 .6em 0 .8em
      &:last-child:after
        content: ""
        padding: 0

// ========
// = Main =
// ========

.main
  center(site-width)
  margin-top: 5rem
  .post-preview
    border-top: 0.1rem solid b16-light-grey-1
    min-height: 8em
    padding: 2rem 2rem 6rem 2rem
    position: relative
    &:last-child
      border-bottom: 0.1rem solid b16-light-grey-1
    &__title
      font: bold big-font-size/100% 'Source Sans Pro', sans-serif
      &__link
        color: b16-dark-grey-0
    &__date
      color: b16-light-grey-0
      font: medium-font-size/100% 'Source Sans Pro', sans-serif
      margin-top: .5em
      text-transform: uppercase
    &__teaser
      color: b16-black-1
      font: text-font-size/150% 'Merriweather', serif
      margin-top: 1em
    &__read-more
      absolute bottom 2rem left 2rem
      background-color: b16-green
      border-radius: .2em
      color: white
      display: inline-block
      font: bold medium-font-size/100% 'Source Sans Pro', sans-serif
      padding: .4em .6em
      text-transform: uppercase
      transition: background-color .6s ease-out 0s
      &:hover
        background-color: shade(b16-green, 30%)
  .post
    &__title
      color: b16-dark-grey-0
      font: bold very-big-font-size/100% 'Source Sans Pro', sans-serif
    &__content
      margin-top: 2rem
      font: text-font-size/150% 'Merriweather', serif
      // Markdown style
      h2
        color: b16-dark-grey-0
        font: bold big-font-size/100% 'Source Sans Pro', sans-serif
        margin-top: 2rem
      h3
        color: b16-dark-grey-0
        font: bold 1.5rem/100% 'Source Sans Pro', sans-serif
        margin-top: 1.5rem
      p
        margin-top: 1rem
      pre
        margin-top: 1rem
      code
        font: 1rem/140% 'Fira Mono'
        border-radius: 0.4rem
      a
        text-decoration: none
        color: b16-blue


// ==========
// = Footer =
// ==========

.footer
  margin-top: 1rem
  padding: 5rem
  .contacts__list
    center(site-width)
    clearfix()
    text-align: center
    &__item
      display: inline-block
      font-size: 1.7rem
      margin-right: 1em
      &:last-child
        margin-right: 0
      &__link
        color: b16-light-grey-0
        transition: color .6s ease-out 0s
        &--twitter:hover
          color: b16-cyan
        &--github:hover
          color: b16-dark-grey-0
        &--linkedin:hover
          color: b16-blue

